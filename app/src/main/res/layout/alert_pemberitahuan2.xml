<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:padding="10dp">


  <androidx.cardview.widget.CardView
    android:layout_width="350dp"
    android:layout_height="680dp"
    android:background="@drawable/bt_uifb"
    android:backgroundTint="@color/colorPurpleT"
    app:cardCornerRadius="25dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
      android:id="@+id/alert_image"
      android:layout_width="@dimen/alert_witdh"
      android:layout_height="@dimen/alert_height"
      android:src="@drawable/ic_alert"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"/>

    <TextView
      android:id="@+id/tvSalam"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="HARAP SIAPKAN DOKUMEN BERIKUT"
      android:layout_below="@+id/alert_image"
      android:gravity="center_horizontal"
      android:textSize="@dimen/tv_size_alert_judul"
      android:textColor="@android:color/black"
      android:textStyle="bold"/>


    <TextView
      android:id="@+id/tv_alert_satu_field"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/tv_alert_dua"
      android:layout_below="@+id/tvSalam"
      android:gravity="center_horizontal"
      android:textSize="20sp"
      android:layout_marginTop="50dp"/>

    <Button
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Mengerti"
      android:textAllCaps="false"
      android:layout_marginTop="30dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/tv_alert_satu_field"
      android:background="@drawable/bt_uifb"
      />

  </RelativeLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>